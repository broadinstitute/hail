apiVersion: v1
kind: Pod
metadata:
  name: run-letsencrypt
  labels:
    app: site
spec:
  containers:
  - name: run-letsencrypt
    command: ["/bin/bash"]
# --test-cert for testing
    args: ["-c", "/etc/init.d/nginx start; sleep 5; rm -rf /etc/letsencrypt/*; certbot --test-cert --cert-name @domain@ -n --agree-tos -m cseed@broadinstitute.org -d @domain@ -d www.@domain@ -d ci.@domain@ -d upload.@domain@ -d scorecard.@domain@ --nginx; cat /etc/nginx/conf.d/run-letsencrypt.conf"]
    image: gcr.io/@project@/run-letsencrypt
    ports:
    - containerPort: 80
    volumeMounts:
      - mountPath: /etc/letsencrypt
        name: letsencrypt-certs
  restartPolicy: Never
  volumes:
    - name: letsencrypt-certs
      persistentVolumeClaim:
        claimName: letsencrypt-certs
