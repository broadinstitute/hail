apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: batch-deployment
  labels:
    app: batch
    hail.is/sha: "@sha@"
spec:
  selector:
    matchLabels:
      app: batch
  replicas: 1
  template:
    metadata:
      labels:
        app: batch
        hail.is/sha: "@sha@"
    spec:
      serviceAccountName: batch-svc
      containers:
      - name: batch
        image: @image@
        ports:
        - containerPort: 5000
        env:
        - name: HAIL_JWT_SECRET_KEY_FILE
          value: /jwt-secret/secret-key
        volumeMounts:
        - name: batch-production-cloud-sql-config
          mountPath: /batch-secrets
          readOnly: true
        - name: jwt-secret
          mountPath: /jwt-secret
          readOnly: true
      volumes:
      - name: batch-production-cloud-sql-config
        secret:
          optional: false
          secretName: batch-production-cloud-sql-config
      - name: jwt-secret
        secret:
          optional: false
          secretName: notebook-secrets
---
apiVersion: v1
kind: Service
metadata:
  name: batch
  labels:
    app: batch
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: batch
