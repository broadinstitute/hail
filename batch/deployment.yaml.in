apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: batch-deployment
  namespace: default
  labels:
    app: batch
    hail.is/sha: "@sha@"
spec:
  selector:
    matchLabels:
      app: batch
  replicas: 1
  template:
    metadata:
      labels:
        app: batch
        hail.is/sha: "@sha@"
    spec:
      serviceAccountName: batch-svc
      containers:
      - name: batch
        image: @image@
        ports:
        - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: batch
  namespace: default
  labels:
    app: batch
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: batch
