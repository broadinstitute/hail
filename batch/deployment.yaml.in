apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: batch
  labels:
    app: batch
    hail.is/sha: "{{ code.sha }}"
spec:
  selector:
    matchLabels:
      app: batch
  replicas: 1
  template:
    metadata:
      labels:
        app: batch
        hail.is/sha: "{{ code.sha }}"
    spec:
      serviceAccountName: batch
      containers:
      - name: batch
        image: "{{ batch_image.image }}"
        env:
          - name: POD_NAMESPACE
            value: "{{ batch_pods_ns.name }}"
        ports:
        - containerPort: 5000
        env:
        - name: HAIL_JWT_SECRET_KEY_FILE
          value: /jwt-secret/secret-key
        - name: HAIL_INSTANCE_ID
          value: cd50b95a89914efb897965a5e982a29d
        volumeMounts:
        - name: sql-batch-batch-admin-config
          mountPath: /sql-batch-batch-admin-config
          readOnly: true
        - name: jwt-secret
          mountPath: /jwt-secret
          readOnly: true
        - name: @gsa_secret@
          mountPath: /batch-gsa-key
          readOnly: true
        - name: @jwt_secret@
          mountPath: /batch-jwt
          readOnly: true
      volumes:
      - name: sql-batch-batch-admin-config
        secret:
          optional: false
          secretName: {{ batch_database.admin_secret_name }}
      - name: jwt-secret
        secret:
          optional: false
          secretName: notebook-secrets
      - name: @gsa_secret@
        secret:
          optional: false
          secretName: @gsa_secret@
      - name: @jwt_secret@
        secret:
          optional: false
          secretName: @jwt_secret@
---
apiVersion: v1
kind: Service
metadata:
  name: batch
  labels:
    app: batch
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: batch
