apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: router-deployment
  labels:
    app: router
    hail.is/sha: "@sha@"
spec:
  selector:
    matchLabels:
      app: router
  replicas: 1
  template:
    metadata:
      labels:
        app: router
        hail.is/sha: "@sha@"
    spec:
      serviceAccountName: router
      containers:
      - name: router
        image: @image@
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: router
  labels:
    app: router
spec:
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 80
  selector:
    app: router
