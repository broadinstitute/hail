apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: cronus-deployment
  labels:
    hail.is/sha: @sha@
spec:
  selector:
    matchLabels:
      app: cronus
  replicas: 1
  template:
    metadata:
      labels:
        app: cronus
        hail.is/sha: @sha@
    spec:
      containers:
      - name: cronus
        image: @image@
        ports:
        - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: cronus
  labels:
    app: cronus
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 5000
  selector:
    app: cronus
