apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: hail-ci-deployment
  labels:
    app: hail-ci
    hail.is/sha: "@sha@"
spec:
  selector:
    matchLabels:
      app: hail-ci
  replicas: 1
  template:
    metadata:
      labels:
        app: hail-ci
        hail.is/sha: "@sha@"
    spec:
      containers:
        - name: hail-ci
          image: @image@
          env:
            - name: SELF_HOSTNAME
              value: http://hail-ci
            - name: BATCH_SERVER_URL
              value: http://batch.default
            - name: WATCHED_TARGETS
              value: '[["hail-is/hail:master", true], ["hail-is/hail:0.1", true]]'
          ports:
            - containerPort: 5000
          volumeMounts:
            - mountPath: /hail-ci/oauth-token
              readOnly: true
              name: hail-ci-0-1-github-oauth-token
            - mountPath: /hail-ci/gcloud-token
              readOnly: true
              name: hail-ci-0-1-service-account-key
      volumes:
        - name: hail-ci-0-1-service-account-key
          secret:
            secretName: hail-ci-0-1-service-account-key
        - name: hail-ci-0-1-github-oauth-token
          secret:
            secretName: hail-ci-0-1-github-oauth-token
